{
  "name": "blog",
  "version": "0.0.1",
  "description": "My blog build with Koa2 and Vue2.",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "build:server": "babel src/server -d dist --presets=env,stage-0",
    "start:vue": "webpack-dev-server --config webpack.dev.js",
    "start": "node ./dist/app.js",
    "build:prod": "webpack --config webpack.prod.js --progress --colors",
    "build:dev": "webpack --config webpack.dev.js --progress --colors",
    "build": "npm run build:server && npm run build:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    ".js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hojas/blog.git"
  },
  "keywords": [
    "koa",
    "vue",
    "blog"
  ],
  "author": "hojas",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hojas/blog/issues"
  },
  "homepage": "https://github.com/hojas/blog#readme",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-polyfill": "^6.23.0",
    "highlight.js": "^9.11.0",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-nunjucks-next": "^1.1.3",
    "koa-router": "^7.2.1",
    "koa-session": "^5.3.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "mongoose": "^4.10.7",
    "mongoose-paginate": "^5.0.3",
    "pangu": "^3.3.0",
    "vue": "^2.3.4",
    "vue-router": "^2.6.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.26.4",
    "eslint": "^4.5.0",
    "eslint-plugin-vue": "^3.12.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.10.1",
    "node-sass": "^4.5.3",
